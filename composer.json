{
    "name": "tuqqu/killposer",
    "description": "Find and delete unused composer /vendor/ directories.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Kurbidaev",
            "email": "artkurbidaev@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-readline": "*",
        "symfony/filesystem": "^4.3",
        "symfony/console": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Killposer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Killposer\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^7.5"
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run --verbose --diff --using-cache=no",
        "phpunit": "vendor/bin/phpunit --coverage-text --colors=never",
        "run-test": [
            "@prepare-for-test",
            "@phpunit"
        ],
        "tests": [
            "@php-cs-fixer",
            "@run-test"
        ]
    },
    "bin": [
        "bin/killposer"
    ]
}
